[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.rs]
indent_style = space
indent_size = 4

# line length is only supported with vim and emacs
max_line_length = 100

[Makefile]
# Tab indentation for Makefiles
indent_style = tab
tab_width = 4

# line length is only supported with vim and emacs
max_line_length = 80

[*.html]
indent_style = space
indent_size = 4

# line length is only supported with vim and emacs
max_line_length = 80

[*.{md,yaml,yml,nix}]
indent_style = space
indent_size = 2

# line length is only supported with vim and emacs
max_line_length = 80

